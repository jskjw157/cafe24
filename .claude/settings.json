  "enableAllProjectMcpServers": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -c \"import json,sys; data=json.load(sys.stdin); path=data.get('tool_input',{}).get('file_path',''); blocked=['.env','secrets/','.pem','.key','credentials']; result=any(b in path for b in blocked); print(f'BLOCKED: Cannot modify sensitive file: {path}') if result else None; sys.exit(2 if result else 0)\""
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.url // empty' | { read url; [[ -n \"$url\" && ! \"$url\" =~ (api\\.|/api/|\\.json$|\\.xml$) ]] && echo \"[Script-First] For HTML pages, consider: python3 script/url_to_cafe24_skin.py --url '$url' (80-95% token savings)\"; exit 0; }",
            "statusMessage": "Checking URL type..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path // empty' | { read f; [[ -n \"$f\" && \"$f\" == *.html && (\"$f\" == *skin5/* || \"$f\" == *cafe24-skins/*) ]] && { echo \"[Cafe24 Skin] Replacement codes in $f:\"; grep -oE '\\{\\$[^}]+\\}' \"$f\" 2>/dev/null | sort -u | head -5; }; exit 0; }"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path // empty' | { read f; [[ -n \"$f\" && \"$f\" == *.claude/pipeline-state/* ]] && echo \"[Pipeline] State updated: $f\" >> .claude/pipeline-state/activity.log; exit 0; }"
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_result.content // empty' 2>/dev/null | wc -c | { read size; [[ $size -gt 50000 ]] && echo \"[HtmlSlim] Large HTML detected (${size} chars). Use: python3 script/url_to_cafe24_skin.py for 80-95% token savings\"; exit 0; }",
            "statusMessage": "Checking HTML size..."
          }
        ]
      }
    ]
  }
}